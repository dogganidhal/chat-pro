<resources>

    <style name="ChatProActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/pink</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="actionBarStyle">@style/ChatProActionBarStyle</item>
        <item name="bottomNavigationStyle">@style/ChatProBottomNavigationBarTheme</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ChatProAppTheme" parent="Theme.AppCompat.Light"/>

    <style name="ChatProActionBarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ChatProBottomNavigationBarTheme" parent="Widget.Design.BottomNavigationView">
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

</resources>
