<resources>

    <style name="ChatProAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/pink</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="actionBarStyle">@style/ChatProActionBarStyle</item>
        <item name="bottomNavigationStyle">@style/ChatProBottomNavigationBarTheme</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="ChatProActionBarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ChatProBottomNavigationBarTheme" parent="Widget.Design.BottomNavigationView">
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoMediumTitleText">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>

    <style name="EditTextStyle" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:hint">@color/pink</item>
    </style>

</resources>
