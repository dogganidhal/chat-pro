<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/initial_view_background"
        android:padding="4dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/contact_initial_text_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/contact_name_text_view"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="@color/textBlack"
        android:textAlignment="textStart"
        android:textSize="18sp"/>

    <View
        android:id="@+id/user_status_view"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/connected_user_background"
        android:layout_gravity="center"/>

</LinearLayout>
