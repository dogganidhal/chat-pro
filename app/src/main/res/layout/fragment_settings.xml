<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SettingsFragment"
    android:orientation="vertical"
    android:layout_marginTop="32dp">

    <LinearLayout
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/initial_view_background"
        android:padding="4dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/connected_user_initial_text_view"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/connected_user_full_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            style="@style/RobotoMediumTitleText"
            android:text="John DOE"
            android:textColor="@color/textBlack"
            android:textAlignment="center"
            android:layout_margin="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail: "
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/connected_user_email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="john.doe@email.com"
                android:textColor="@color/textBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel: "
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/connected_user_phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="07 58 72 85 23"
                android:textColor="@color/textBlack"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineGray"/>

        <Button
            android:id="@+id/connected_user_disconnect_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="SE DECONNECTER" />

    </LinearLayout>

</LinearLayout>